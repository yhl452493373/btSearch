@import "../common.styl"

base()

header
  display flex

.header-title
  padding 20% 0
  position relative
  .icon-search
    position absolute
    left 1.5rem
    top 0
    color #ccc
    font-size 1.6rem
    padding-top 0.1rem
  .icon-trans
    position absolute
    right 1.5rem
    top 0
    color #ccc
    font-size 1.6rem
    padding-top 0.3rem
    transform rotate(90deg) scaleY(1.3)
    -webkit-transform rotate(90deg) scaleY(1.3)
  input
    width 100%
    height 60%
    color #000
    border none
    outline none
    background #fff
    padding 0 2.5rem
    margin 0

input[type=search]
  -webkit-appearance textfield

input::-webkit-search-decoration,
input::-webkit-search-cancel-button
  display none


#search
  padding-right 1rem