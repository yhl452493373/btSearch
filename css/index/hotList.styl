@import "../common.styl"

body
  background-color white

.words
  padding 0 0.5rem 0.5rem 0.5rem
  font-size 0
  display flex
  flex-wrap wrap
  .word
    flex 1 0 auto
    border 0.1rem solid #eee
    font-size 1.4rem
    text-align center
    padding 0.8rem
    margin 0.5rem
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
  .empty
    flex 1
    text-align center
    margin-top 5rem
    font-size 1.6rem
    color #777
